  <!-- Form inspired by w3schools.com Bootstrap Form reference-->
  <br>
  <h2>Adoption Form</h2>
  <br>
  <p>Want to adopt rats? Fill out this form and we will get back to you!</p>
  <br>
  <form action="adoptformreceived" method="POST">
      <div class="form-group row">
          <div class="col-xs-3">
            <label for="firstName">First Name</label>
            <input id="firstName" name="firstName" class="form-control" type="text" required>
          </div>
          <div class="col-xs-3">
            <label for="lastName">Last Name</label>
            <input id="lastName" name="lastName" class="form-control" type="text">
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-4">
            <label for="email">Email</label>
            <input id="email" name="email" class="form-control" type="email" required>
          </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-3">
            <label for="phone">Phone Number</label>
            <input id="phone" name="phone" class="form-control" type="tel">
        </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-3 checkbox">
              <label for="ageCheck"><input id="ageCheck" type="checkbox" name="ageCheck" value="yes">I am at least 18 years old</label>
          </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-3 checkbox">
            <label for="hasOwned"><input id="hasOwned" type="checkbox" name="hasOwned" value="yes">I have owned pet rats in the past.</label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-6">
            <label for="pickRat">Interested in any particular rats?<br>(Hold down shift to pick more than one)</label>
            <select id="pickRat" name="pickRat" class="form-control" multiple>
              {{#each ratties}}
                <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-6">
          <label for="comment">Any questions or comments?</label>
          <textarea id="comment" name="comment" class="form-control" rows="6"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

</div>

